<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
 <modelVersion>4.0.0</modelVersion>

 <parent>
  <groupId>org.opengeo</groupId>
  <artifactId>docs</artifactId>
  <version>4-SNAPSHOT</version>
 </parent>

 <groupId>org.opengeo.docs</groupId>
 <artifactId>usermanual</artifactId>
 <packaging>jar</packaging>
 <name>OpenGeo Suite User Manual Doc Module</name>

 <properties>
   <sphinx-flag>-W</sphinx-flag>
 </properties>

 <profiles>
   <profile>
     <id>test</id>
     <properties>
       <sphinx-flag>-q</sphinx-flag>
     </properties>
   </profile>
 </profiles>

 <build>
   <plugins>
     <plugin>
       <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <exec executable="sphinx-build" failonerror="true" dir="${basedir}/source"> 
                  <arg line="${sphinx-flag} -b html -d ${build.directory}/doctrees . ${build.directory}/html"/>
                </exec>
                <exec executable="sphinx-build" failonerror="false" dir="${basedir}/source">
                  <arg line="-b latex -d ${build.directory}/doctrees . ${build.directory}/latex"/>
                </exec>
                <exec executable="make" failonerror="false" dir="${build.directory}/latex">
                  <arg line="all-pdf"/>
                </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
     </plugin>
   </plugins>
 </build>

</project>
