<?xml version="1.0"?>
<assembly>
    <id>sdk</id>
    <baseDirectory>opengeosuite-${project.version}-sdk</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>sdk/target/sdk</directory>
            <excludes>
                <exclude>bin/</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>sdk/target/sdk/bin</directory>
            <fileMode>0755</fileMode>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>sdk/jetty</directory>
            <outputDirectory>/jetty</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/version.ini</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
